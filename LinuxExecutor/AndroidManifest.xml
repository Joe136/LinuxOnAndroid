<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.joe136.linuxexecutor"
    android:versionCode="1"
    android:versionName="0.0.1" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="15" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.joe136.linuxexecutor.DistributionListActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.joe136.linuxexecutor.DistributionDetailActivity"
            android:label="@string/title_distribution_detail"
            android:parentActivityName=".DistributionListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".DistributionListActivity" />
        </activity>
        <activity
            android:name="org.joe136.linuxexecutor.MainOptionsMenu"
            android:label="@string/string_options"
            android:parentActivityName=".MainOptionsMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainOptionsMenu" />
        </activity>
        <activity
            android:name="org.joe136.linuxexecutor.EditDialogFragment"
            android:label="@string/string_edit_distro"
            android:parentActivityName=".EditDialogFragment" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditDialogFragment" />
        </activity>
    </application>

</manifest>